[user]
{{- if or (hasSuffix "arcticlight.me" .email) (hasPrefix "max" .email) }}
	name = Max Clive
{{- else }}
	name = Matthew Clive
{{- end }}
	email = {{ .email | quote }}
[push]
	default = simple
	autoSetupRemote = true
[pull]
	rebase = false
{{- if .login }}
[url "git@github.com:ArcticLight/"]
	insteadOf = https://github.com/ArcticLight/
	insteadOf = https://github.com/arcticlight/
	insteadOf = git://github.com/ArcticLight/
	insteadOf = git://github.com/arcticlight/
{{- end -}}
{{- if eq .email "arcticlight@arcticlight.me" }}
[init]
	defaultBranch = main
{{- end }}
[core]
	pager = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	line-numbers = true
	side-by-side = true

[merge]
	conflictStyle = zdiff3
